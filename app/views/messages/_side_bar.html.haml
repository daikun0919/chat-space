.sideBar
  .sideBar__user
    .sideBar__user--box
      .name
        = current_user.name
      .botton
        .botton_1
          = link_to new_group_path do
            = icon('fas', 'edit')
        .botton_2
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  
  .sideBar__groupList
    - current_user.groups.each do |group|
      .sideBar__groupList__groupName
        = link_to group_messages_path(group) do
          .sideBar__groupList__groupMessage
            = group.name
          .sideBar__groupList__groupName
            = group.show_last_message